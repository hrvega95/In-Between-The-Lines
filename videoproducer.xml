<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <About>
    <Summary>GO!</Summary>
  </About>

  <ServerSection>
    <ServerInitialConditions>
        <Time>
          <StartTime>1</StartTime>
          <AllowPassageOfTime>false</AllowPassageOfTime>
        </Time>
    </ServerInitialConditions>
    <ServerHandlers>
      <FlatWorldGenerator generatorString="3;7,220*1,5*3,2;3;,biome_1"/>
      <DrawingDecorator>
        <!-- coordinates for cuboid are inclusive -->
        <DrawCuboid x1="0" y1="46" z1="1" x2="4" y2="250" z2="200" type="air" />            <!-- limits of our arena -->
        <DrawCuboid x1="-2" y1="45" z1="-2" x2="-1" y2="65" z2="202" type="stone" />           <!-- lava floor -->
        <DrawCuboid x1="5" y1="45" z1="-2" x2="7" y2="55" z2="202" type="stone" />           <!-- lava floor -->
        <DrawCuboid x1="0"  y1="45" z1="1"  x2="4" y2="45" z2="200" type="sandstone" />      <!-- floor of the arena -->
        <DrawCuboid x1="0"  y1="45" z1="200" x2="4" y2="45" z2="200" type="lapis_block" />     <!-- the destination marker -->
        <DrawBlock x="2"  y="45" z="1" type="cobblestone" />    <!-- the starting marker -->
      </DrawingDecorator>
      <ServerQuitFromTimeUp timeLimitMs="60000"/>
      <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>

  <AgentSection mode="Survival">
    <Name>Hans</Name>
    <AgentStart>
      <Placement x="2.5" y="46.0" z="1.5" pitch="0" yaw="0"/>
    </AgentStart>
    <AgentHandlers>
        <ContinuousMovementCommands turnSpeedDegs="400" />
        <VideoProducer want_depth="true">
            <Width>1920</Width>
            <Height>1080</Height>
        </VideoProducer>
      <RewardForTouchingBlockType>
        <Block reward="-100.0" type="water" behaviour="onceOnly"/>
        <Block reward="-50.0" type="glowstone" behaviour="onceOnly"/>
        <Block reward="100.0" type="lapis_block" behaviour="onceOnly"/>
      </RewardForTouchingBlockType>
      <RewardForSendingCommand reward="0" />
      <AgentQuitFromTouchingBlockType>
          <Block type="glowstone" />
          <Block type="water" />
          <Block type="lapis_block" />
      </AgentQuitFromTouchingBlockType>
    </AgentHandlers>
  </AgentSection>

</Mission>
